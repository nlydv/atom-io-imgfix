---
env:
    browser: true
    node: false
    es6: true

globals:
    chrome: readonly

parserOptions:
    ecmaVersion: latest
    sourceType: script

extends: eslint:recommended

rules:
    indent:
        - error
        - 4
        - SwitchCase: 1

    linebreak-style:
        - error
        - unix

    quotes:
        - error
        - double

    semi:
        - error
        - always

    no-unused-vars: off
    array-bracket-spacing: off
